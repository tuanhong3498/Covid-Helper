<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/faq_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/faq_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_faq_question"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/grey_medium"/>

        <!--spacer-->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/faq_EndTriangle"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_triangle_outline"
            android:contentDescription="@string/icon_description_triangle_outline"
            android:rotation="180"/>

    </LinearLayout>

    <TextView
        android:id="@+id/faq_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="24dp"
        android:text="@string/faq_dummy_answer"
        android:textColor="@color/black"
        android:textSize="14sp"/>

</LinearLayout>