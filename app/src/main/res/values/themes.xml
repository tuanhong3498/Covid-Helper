<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CovidHelper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_medium</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_light</item>
        <item name="colorSecondaryVariant">@color/grey_medium</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_very_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Custom theme for date picker -->
        <item name="materialCalendarTheme">@style/Theme.CovidHelper.DatePicker</item>
        <!-- For rounded corner on dialog box -->
        <item name="materialAlertDialogTheme">@style/Theme.CovidHelper.AlertDialog</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CovidHelper.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CovidHelper.MediumComponent</item>
    </style>

    <style name="Theme.CovidHelper.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.CovidHelper</item>
    </style>

    <style name="CovidHelperToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/blue_medium</item>
    </style>

    <style name="Theme.CovidHelper.NoActionBar" parent="Theme.CovidHelper">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>